<?xml version="1.0" encoding="utf-8"?>
<android.support.design.internal.ForegroundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:descendantFocusability="blocksDescendants"
    android:foreground="?attr/list_selector"
    android:paddingLeft="16dp">

    <TextView
        android:id="@+id/line_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:scrollHorizontally="true"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/line_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:scrollHorizontally="true"
        android:textColor="?android:textColorSecondary"
        android:textSize="14sp"/>

    <com.simplecity.amp_library.ui.views.PlayCountView
        android:id="@+id/play_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:minHeight="28dp"
        android:minWidth="28dp"
        android:tag=":aesthetic_ignore"
        android:textSize="14sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/line_three"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lines="1"
        android:textSize="12sp"/>

    <com.simplecity.amp_library.ui.views.OverflowButton
        android:id="@+id/btn_overflow"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical|right"
        android:layout_marginLeft="-8dp"
        android:layout_marginRight="4dp"
        android:alpha="0.8"
        android:background="@null"/>
</android.support.design.internal.ForegroundLinearLayout>